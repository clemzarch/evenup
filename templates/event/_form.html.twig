{{ form_start(form) }}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_errors(form.title) }}
                    {{ form_widget(form.title) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.description) }}
                    {{ form_widget(form.description) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.latitude) }}
                    {{ form_widget(form.latitude) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.longitude) }}
                    {{ form_widget(form.longitude) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.formattedAddress) }}
                    {{ form_widget(form.formattedAddress) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.city) }}
                    {{ form_widget(form.city) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.date) }}
                    {{ form_widget(form.date) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.locale) }}
                    {{ form_widget(form.locale) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.activityType) }}
                    {{ form_widget(form.activityType) }}
                </div>
                <div class="custom-control custom-checkbox">
                    <input class="custom-control-input" type="checkbox" id="boost_event">
                    <label class="custom-control-label text-white pt-1" checked for="boost_event">
                        <span class="ml-3">Boost évènements (+4,99€)</span>
                    </label>
                </div>
                <div class="form-group float-right mt-3">
                    <button class="btn btn-white text-evenup">
                        {{ button_label|default('Procéder au payement') }} <i class="fas fa-chevron-right ml-1"></i>
                    </button>
                </div>      
            </div>
        </div>
    </div>
{{ form_end(form) }}
